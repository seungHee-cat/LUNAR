<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!--//////// main ////////-->
	<!-- 메인 -->
	<definition name="main" extends="base.layout">
		<put-attribute name="body" value="/WEB-INF/views/main/main.jsp" />
	</definition>

	<!-- 기본 빈 레이아웃 설정 -->
	<definition name="base.none" template="/WEB-INF/static/layout/baseNoneLayout.jsp">
		<put-attribute name="body" value="/WEB-INF/static/layout/body.jsp" />
	</definition>

	<!-- 기본 레이아웃 설정 -->
	<definition name="base.layout" template="/WEB-INF/static/layout/baseLayout.jsp">
		<put-attribute name="body" value="/WEB-INF/static/layout/body.jsp" />
	</definition>

	<!-- 테이블 리턴용 화면 -->
	<definition name="base.empty" template="/WEB-INF/static/layout/empty.jsp">
		<put-attribute name="root" value="/WEB-INF/static/layout/body.jsp" />
	</definition>


	<!--//////// sys > login ////////-->
	<!-- 로그인 모달 -->
	<definition name="sysLoginPop" extends="base.empty">
		<put-attribute name="root" value="/WEB-INF/views/sys/login/sysLoginPop.jsp" />
	</definition>

	<!-- 로그아웃 화면 -->
	<definition name="sysLoginLogout" extends="base.empty">
		<put-attribute name="root" value="/WEB-INF/views/sys/login/sysLoginLogout.jsp" />
	</definition>

</tiles-definitions>